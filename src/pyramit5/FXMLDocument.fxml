    <children>
      <VBox alignment="CENTER" layoutX="393.0" layoutY="253.0" prefHeight="411.0" prefWidth="294.0" spacing="40.0">
         <children>
              <Button fx:id="Start" onAction="#startfunction" text="Start">
               <font>
                  <Font name="Barlow Condensed ExtraBold Italic" size="33.0" />
               </font>
            </Button>
            <Button fx:id="Score" onAction="#scorefunction" text="Score">
               <font>
                  <Font name="Barlow Condensed ExtraBold Italic" size="33.0" />
               </font>
            </Button>
            <Button fx:id="Exit" onAction="#exitfunction" text="Exit">
               <font>
                  <Font name="Barlow Condensed ExtraBold Italic" size="33.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <HBox alignment="CENTER" layoutX="214.0" layoutY="112.0" prefHeight="232.0" prefWidth="565.0" spacing="20.0">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
