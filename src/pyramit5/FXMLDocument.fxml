                  <Image url="@../bgImage/pyramid%20icon.png" />
               </image>
            </ImageView>
            <Text fill="#d77e7e" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Pyramid Card Game" textAlignment="CENTER">
